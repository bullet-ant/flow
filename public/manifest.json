{
  "manifest_version": 3,
  "name": "Flow",
  "$schema": "https://json.schemastore.org/chrome-manifest.json",
  "version": "0.1.0",
  "description": "Transform your new tab page into a personalized dashboard, designed to seamlessly maintain your Flow.",
  "host_permissions": ["https://flow-server-kappa.vercel.app/api/*"],
  "permissions": ["storage"],
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  }
}
